{
  "name": "todo-node",
  "version": "1.0.0",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "main": "index.ts",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles",
    "tsc": "cross-env NODE_ENV=development tsc",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "build": "rimraf dist && prisma generate && tsc",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "migrate:test": "dotenv -e .env.test -- npx prisma migrate dev",
    "migrate:dev": "dotenv -e .env -- npx prisma migrate dev",
    "migrate:deploy": "dotenv -e .env -- npx prisma migrate deploy",
    "prisma-seed": "npx prisma db seed",
    "prisma-seed-test": "dotenv -e .env.test -- npx prisma db seed"
  },
  "pre-commit": [
      "ts.check",
      "build",
      "add-build"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.5",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "pre-commit": "^1.2.2",
    "prisma": "^6.4.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.24.2"
  }
}
